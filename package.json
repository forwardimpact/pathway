{
  "name": "forwardimpact-monorepo",
  "version": "0.5.0",
  "private": true,
  "description": "Applications that help teams grow and cultivate world-class engineers in the age of AI",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/forwardimpact/pathway"
  },
  "type": "module",
  "workspaces": [
    "apps/schema",
    "apps/model",
    "apps/pathway",
    "libs/libdoc"
  ],
  "scripts": {
    "start": "npm run -w @forwardimpact/pathway pathway -- serve --data=../../apps/schema/examples",
    "prestart": "npm run generate-index",
    "check": "npm run format && npm run lint && npm run test && npm run validate:shacl",
    "check:fix": "npm run format:fix && npm run lint:fix",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "find ./tests -name '*.test.js' | xargs node --test",
    "test:e2e": "npx playwright test",
    "validate": "npm run -w @forwardimpact/schema validate",
    "validate:shacl": "npm run -w @forwardimpact/schema validate:shacl",
    "generate-index": "npm run -w @forwardimpact/schema generate-index",
    "pathway": "npm run -w @forwardimpact/pathway pathway"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "n3": "^2.0.1",
    "prettier": "^3.7.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
